    <script>
        $(document).ready(function () {
            $(document).ajaxStart(function () { $('#loadingf').show(); });
            $(document).ajaxStop(function () { $('#loadingf').hide(); });
            $("#ttprojet").click(function () {
                $("#megaMenu").fadeToggle(500);
            });


        });


        $('#OSModal').on('hidden.bs.modal', function () {
            $("#os").hide()
            $("#pr").hide()
            $("#versions").hide()
        })


        function OPMOdal() {
            $('#OSModal').modal('show');
            $('input:radio[name=OPRadioOptions]').each(function () { $(this).prop('checked', false); });
        }

        $('input:radio[name="OPRadioOptions"]').change(
            function () {
                if ($(this).is(':checked') && $(this).val() == 'convertOS')
                {
                    $.ajax({
                        url: '@Url.Action("returnOSList", "OpenProject")',
                        dataType: "json",
                        type: 'GET',
                        data: {
                         status: 1
                    },
                    success:function(data)
                    {
                        $("#OS_list").empty();
                    if (data == null || data == "")
                    {
                        $("#OS_list").append('<option value="">'+'no results'+'</option >');
                    }
                    else
                    {

                        $("#OS_list").append('<option value="">' +'Liste des offres de services'+'</option >');
                    $.each(data, function (index, row) {

                        $("#OS_list").append('<option value="' + data[index] + '">' + data[index] + '</option>');


                    });
                        $("#OS_list").selectpicker('refresh');
                        $("#os").show()
                        $("#pr").hide()
                        $("#versions").hide()
                    }
                    }
                    });
                }

                else if ($(this).is(':checked') && $(this).val() == 'createVersion')
                {
                    $.ajax({
                        url: '@Url.Action("returnOSList", "OpenProject")',
                        dataType: "json",
                        type: 'GET',
                        data: {
                         status: 4
                      },
                    success:function(data)
                    {
                        $("#projects_list").empty();
                    if (data == null || data == "")
                    {
                        $("#projects_list").append('<option value="">'+'no results'+'</option >');
                    }
                    else
                    {

                        $("#projects_list").append('<option value="">' +'Liste des projets'+'</option >');
                    $.each(data, function (index, row) {

                        $("#projects_list").append('<option value="' + data[index] + '">' + data[index] + '</option>');


                    });
                        $("#projects_list").selectpicker('refresh');
                        $("#pr").show()
                        $("#os").hide()
                    }
                    }
                    });
                }
            });

        $('#projects_list').change(function () {

            if ($(this).val() != "") {

                {
                    numProject=  $(this).val()
            $.ajax({
                        url: '@Url.Action("returnVersionsList", "OpenProject")',
                        dataType: "json",
                        type: 'GET',
                        data: {
                            project_number: numProject
                    },
                    success:function(data)
                    {
                        $("#versions_list").empty();
                    if (data == null || data == "" || data.lenght==0 )
                    {
                        $("#versions_list").append('<option value="">'+'no results'+'</option >');
                    }
                    else
                    {

                        $("#versions_list").append('<option value="">' + 'Liste des versions' + '</option >');
                        if (data[0] == -1) {
                            $("#versions_list").append('<option value="">' + 'no results' + '</option >');
                        }
                        else {
                            $.each(data, function (index, row) {

                                $("#versions_list").append('<option value="' + data[index] + '">' + data[index] + '</option>');

                            });
                        }

                        }
                        $("#versions_list").selectpicker('refresh');
                        $("#versions").show()
                    }
                    });
                }
            }

        });

        function goToOpenProjectPage() {
            var project_number =""
            if ($('input:radio[name="OPRadioOptions"]').is(':checked') && $('input:radio[name="OPRadioOptions"]:checked').val() == 'convertOS') {
                project_number = $('#OS_list').val()
                var url = "/OpenProject/Index?project_number=" + project_number + '&client_number=' + '' + '&origin=' + '';
                window.location.href = url;

            }

            else if ($('input:radio[name="OPRadioOptions"]').is(':checked') && $('input:radio[name="OPRadioOptions"]:checked').val() == 'createVersion') {
                project_number = $('#projects_list').val()
                var url = "/OpenProject/Index?project_number=" + project_number + '&client_number=' + '' + '&origin=' + '';
                window.location.href = url;

            }

        }
    </script>
